<%- layout('layouts/boilerplate') %>
    <div id="cluster-map" class="mb-5"></div>
    <% for(let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.images[0].url %>" class="img-fluid" alt="image of a campground">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %> <span class="float-end">Price: $<%= campground.price %> </span>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View <%= campground.title
                                %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %> }
</script>
<script src="/js/clusterMap.js"></script>