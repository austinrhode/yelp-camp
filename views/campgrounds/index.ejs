<%- layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new"class="btn btn-success my-3">New Campground</a>
    <% for(let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.image %>" class= "img-fluid" alt="image of a campground">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %> <span class="float-end">Price: $<%= campground.price %> </span></h5>
                        <p class="card-text"><%= campground.description %> </p>
                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View <%= campground.title %> </a>
                      </div>
                </div>
              </div>
        </div>
    <% } %>